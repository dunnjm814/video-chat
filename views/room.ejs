<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/room.css">
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
    integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk="
    crossorigin="anonymous"
    />
    <script>
      const  ROOM_ID = '<%= roomId %>'
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="javascripts/script.js" defer></script>
    <title><%= roomId %></title>
  </head>
  <body>
    <section class='side-bar'>
        <div id='chat'>
          <div class="chat-container">
            <header class="chat-header">
              <h1><i class="fas fa-smile"></i> <%= roomId %> chat</h1>
              <a id="leave-btn" class="btn">Leave Room</a>
            </header>
            <main class="chat-main">
              <div class="chat-sidebar">
                <h3><i class="fas fa-users"></i> Users</h3>
                <ul id="users"></ul>
              </div>
              <div class="chat-form-message-wrap">
                <div class="chat-messages"></div>
                <div class="chat-form-container">
                  <form id="chat-form">
                    <input id="msg" type="text" placeholder="Enter Message" required autocomplete="off" />
                    <button class="media-control"><i class="fas fa-paper-plane"></i> Send</button>
                  </form>
                </div>

              </div>
            </main>
          </div>
        </div>
        <div id='media-controls'>
          <button id='mute' class='media-control'><i id='mute-icon' class="fas fa-volume-up"> Mute</i></button>
          <button id='cam-off' class='media-control'><i id='video-on' class="fas fa-video"></i> Video</button>
        </div>
      </section>
    <div class='video-canvas'>
      <div id='video-grid'></div>
    </div>
  </body>
</html>
